{
  "name": "cryptofollow",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "apps/backend",
    "apps/frontend"
  ],
  "scripts": {
    "dev:backend": "npm run -w apps/backend dev",
    "dev:frontend": "npm run -w apps/frontend dev",
    "dev": "npm -ws run dev",
    "format": "prettier --write .",
    "lint": "eslint .",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "db:seed": "npm --workspace apps/backend run db:seed",
    "db:migrate": "npm run prisma:migrate",
    "compose:up": "docker-compose up -d --build",
    "compose:down": "docker-compose down -v"
  },
  "devDependencies": {
    "prisma": "^5.16.1"
  }
}
